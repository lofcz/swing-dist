{
  "name": "@brugarolas/swing",
  "description": "A swipeable cards interface. The swipe-left/swipe-right for yes/no input. As seen in apps like Jelly and Tinder.",
  "version": "3.3.0",
  "author": "andres-brugarolas",
  "dependencies": {
    "hammerjs": "^2.0.8",
    "rebound": "^0.1.0",
    "sister": "^3.0.2",
    "prefix": "^1.0.0"
  },
  "peerDependencies": {
    "core-js": "3.6.x",
    "@babel/runtime-corejs3": "7.11.x"
  },
  "devDependencies": {
    "core-js": "^3.6.5",
    "@babel/core": "^7.11.1",
    "@babel/cli": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/runtime-corejs3": "^7.11.0",
    "@babel/register": "^7.10.5",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^7.6.0",
    "eslint-config-canonical": "^22.0.0",
    "husky": "^4.2.5",
    "raf": "^3.4.1",
    "ava": "^3.11.1",
    "@ava/babel": "^1.0.1",
    "browser-env": "^3.3.0",
    "sinon": "^9.0.2"
  },
  "keywords": [
    "swipe",
    "cards",
    "swipeable"
  ],
  "license": "BSD-3-Clause",
  "main": "dist/index.js",
  "files": [
    "dist/index.js",
    "dist/Stack.js",
    "dist/Card.js",
    "dist/Direction.js",
    "dist/utilities.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/brugarolas/swing"
  },
  "scripts": {
    "build": "babel ./src --out-dir ./dist --copy-files",
    "lint": "eslint ./src ./test",
    "test": "ava --verbose --serial",
    "test:debug": "ava debug --verbose --serial"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "ava": {
    "babel": {
      "compileAsTests": [
        "test/helpers/**/*"
      ]
    },
    "files": [
      "test/swing/**/*"
    ],
    "require": [
      "@babel/register",
      "./test/helpers/setupBrowserEnvironment.js"
    ]
  }
}
